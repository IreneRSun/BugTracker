@model UserDashboardModels
@{
    ViewData["Title"] = "Dashboard";
}

<!-- project creation button -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create-project-dialog">New Project</button>

<!-- project search bar -->
<form method="get" class="mt-1" asp-controller="Account" asp-action="UserDashboard">
    <input type="text" name="searchQuery" placeholder="Search for projects ... " />
    <button type="submit">Search</button>
</form>

<!-- page title -->
<h2>@ViewData["Title"]</h2>

<!-- welcome message -->
<div>
    <img src="@Model.User.Avatar" alt="" class="rounded-circle" width="100px" height="100px" />
    <h3>Welcome @Model.User.UserName</h3>
</div>

<!-- project creation modal dialog -->
<div class="modal fade" id="create-project-dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-controller="Account" asp-action="CreateProject" asp>
                <div class="modal-header">
                    <h5 class="modal-title">Create Project</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <label>Enter a name for the project: </label>
                    <input type="text" name="project-name" placeholder="Project Name" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create Project</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- project search results modal dialog -->
@if (Model.SearchQuery != null)
{
    <div class="modal fade mt-2" id="project-search-results" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Results for "@Model.SearchQuery"</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @foreach (var item in Model.ProjectSearchResults)
                    {
                        <label>@Html.DisplayFor(modelItem => item.ProjectName)</label>
                    }
                </div>
            </div>
        </div>
    </div>
}

<!-- user's projects -->
<h2>Projects</h2>
<table class="table">
  <tr>
    <th>Project ID</th>
    <th>Project Name</th>
  </tr>
  @foreach (var item in Model.UserProjects)
  {
    <tr>
      <td>
          <a href="@Url.Action("ProjectDashboard", "Account", new { projectId = item.ProjectId, userId = Model.User.UserId })">@Html.DisplayFor(modelItem => item.ProjectId)</a>
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.ProjectName)
      </td>
    </tr>
  }
</table>
