@model BugTracker.Models.ViewDataModels.TasksViewModel

<!-- task list -->
<h1 class="my-3">Tasks</h1>

<div class="row mt-3">
    @if (Model.BugReports.Count > 0)
    {
        @foreach (var report in Model.BugReports)
        {
            <div class="col-3 m-1">

                <a asp-controller="Account" asp-action="BugReport" asp-route-reportId=@report.ID class="text-decoration-none">
                    <div class="card hover-push shadow-grey">

                        <div class="card-img-top block-strip bg-grad-sunset"></div>

                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-auto">
                                    <span class="material-symbols-outlined col-auto" style="color: @report.DisplayColor;">bug_report</span>
                                </div>
                                <div class="col-auto">
                                    <h5 class="card-title col-auto">@report.Summary</h5>
                                </div>
                                <div class="col-12">
                                    <i class="text-grey">Reported on <br /> @report.Date</i>
                                </div>
                            </div>

                            @if (report.HelpWanted)
                            {
                                <div class="rounded-pill bg-success text-white d-inline p-1">Help Wanted</div>
                            }

                        </div>

                    </div>
                </a>

            </div>
        }
    } 
    else
    {
        <div class="mt-3 text-grey">
            No tasks available. Join a project and assign yourself to one.
        </div>
    }
</div>
